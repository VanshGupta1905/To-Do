<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="CSS/styles.css" />
  </head>
  <body>
    <h1 id="#heading">To-do List</h1>
    
    <p
      id="#heading"
      style="text-align:center; font-size: xx-large; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: rgb(23, 0, 154);"
    >{{day}} {{month}} {{year}}</p>
    <p
      id="#heading"
      style="text-align:center; font-size: xx-large; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: rgb(23, 0, 154);"
    >{{Listname}}</p>
    <form action="/addTask" method="post">
    
      <input type="hidden" name="ListName" value={{Listname}} />
      <input
        type="text"
        style="background-color: aliceblue;"
        name="task"
        placeholder="Add-Task"
      />
      <button type="submit">▶</button>
    </form>
    {{#if hasTask}}
       
      {{#each tasks as |task|}}
        <div class="item box">
          <p
            style="font: weight 700px; font-family: Arial, Helvetica, sans-serif;"
          >• {{task.name}} </p>
          <form
            action="/delete"
            method="post"
            style="position: absolute; margin-left: 640px;"
          >
          <input type="hidden" name="ListName" value="{{task.curr_list}}">
            <input
              type="checkbox"
              name="task_id"
              value={{task._id}}
              
              onclick="this.form.submit()"
              id=""
            />
          </form>
        </div>
      {{/each}}

    {{else}}
      <p
        style="text-align:center; font-size: xx-large; margin-top: 50px;color: rgb(108, 1, 132);"
      >You have completed all the tasks</p>
    {{/if}}

  </body>
</html>